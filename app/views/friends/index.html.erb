<table class="table table-hover">
      <tr>
        <th>Name</th>
        <th>Status</th>
        <th>Mood</th>
      </tr>
      <% @friends.each do |f| %>
      <% if (f["status"]["sentiment"]==":)") %>
      <tr class= "success"><% elsif (f["status"]["sentiment"]==":(") %>
       <tr class="error"   ><% else  %>
      <tr class="warning">
      <% end %>
        <td><%= link_to f["name"], 'http://www.facebook.com/'+f["id"] %></td>
        <td><%= link_to f["status"]["text"], 'http://www.facebook.com/'+f["id"]+'/posts/'+f["status"]["id"] %></td>
        <td><% if (f["status"]["sentiment"]==":)") %> <img src="/images/happy.png" width="40" height="40">
          <% elsif (f["status"]["sentiment"]==":(")  %><img src="/images/sad.png" width="40" height="40">
          <% else %> <img src="/images/blank.png" width="40" height="40">  <% end %> </td>
      </tr>
      <%end %>
</table>

