<%if @fr%>
<% if (@fr["status"]["sentiment"]==":)") %>
    <tr class= "success"><% elsif (@fr["status"]["sentiment"]==":(") %>
    <tr class="error"   ><% else  %>
    <tr class="warning">
<% end %>
<td><%= link_to @fr["name"], 'http://www.facebook.com/'+@fr["id"] %></td>
<td><%= link_to @fr["status"]["text"], 'http://www.facebook.com/'+@fr["id"]+'/posts/'+@fr["status"]["id"] %></td>
<td><% if (@fr["status"]["sentiment"]==":)") %> <img src="/images/happy.png" width="40" height="40">
  <% elsif (@fr["status"]["sentiment"]==":(")  %><img src="/images/sad.png" width="40" height="40">
  <% else %> <img src="/images/blank.png" width="40" height="40">  <% end %> </td>
</tr>
<%end%>